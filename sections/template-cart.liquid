{% if cart.item_count > 0 %}
    <div class="container">
        <div class="cart-container-available-direction">
            <h1 class="title"></h1>
            <a href="" class="continue-shopping-link"></a>
        </div>
    </div>
{% else %}
    <div class="container">
        <div class="container-direction">
            <h1 class="title">Cart is empty</h1>
            <div class="continue-shopping-container"><a href="{{ routes.all_products_collection_url }}" class="continue-shopping-button">Continue shopping</a></div>
        </div>
    </div>
{% endif %}

<style>
    .container{
        display: :flex;
        width: 100%;
        height: 50vh;
        margin: 50px auto;
    }


    .container-direction{
        display: flex;
        justify-content: center;
        height: 100%;

        align-items: center;
        flex-direction: column;
    }

    .cart-container-available-direction{
        display: flex;
        justify-items: end;
        justify-content: space-between;
    }

    .title{
        font-size: x-large;
        text-align: center;
    }

    .continue-shopping-container{
        margin: 30px 0;
        padding: 20px 0;
    }

    .continue-shopping-link{
        color: blue;
    }

    .continue-shopping-link:hover{
        color: black;
    }

    .continue-shopping-button{
        border: solid 3px black;
        color: aliceblue;
        padding: 20px 30px;
        background-color: rgb(198, 224, 224);
    }
</style>