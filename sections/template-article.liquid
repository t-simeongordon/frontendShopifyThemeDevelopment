<h1>{{ article.title }}</h1>

{% if section.settings.enable_author %}  
    <small>{{ article.author }}</small>
{% endif %}

{% if section.settings.enable_published_date %}
    <time datetime="{{ article.published_at |  date: '%Y-%m-%d' }}">{{ article.published_at |  date: '%Y-%m-%d' }}</time>
{% endif %}

<img src="{{ article.image |  img_url: 'large'  }}" alt="{{ article.image.alt }}">

<div>{{ article.content }}</div>

{%  schema  %} 
{
    "name": "Template Article",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable_author",
            "default": true,
            "label": "Display author section"
        },
        {
            "type": "checkbox",
            "id": "enable_published_date",
            "default": true,
            "label": "Display date published"
        }
    ],
    "blocks": [
        {
            "type": "article_title",
            "name": "Title",
            "limit": 1
        },
        {
            "type": "article_author",
            "name": "Author",
            "limit": 2
        },
        {
            "type": "article_published_date",
            "name": "Published date",
            "limit": 2
        },
        {
            "type": "article_feature_image",
            "name": "Thumbnail",
            "limit": 1
        }
    ]
}
{% endschema %}