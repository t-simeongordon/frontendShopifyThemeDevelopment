<div class="collection-container">
    {% paginate collection.products by 4 %}
        <h1>{{ collection.title }}</h1>
        <div class="grid-container">
            <div class="sidebar-container">
                sidebar
            </div>
            <div class="card-container">
                {% for product in collection.products %}
                    <div class="card">
                        {% if product.featured_image %}
                            <img src="{{ product.featured_image.src | image_url: width: '100px' }}" alt="{{ product.featured_image.alt }}">
                        {% endif %}
                        <span>{{ product.vendor }}</span>
                        <a href="{{ product.url }}">
                            <h1>{{ product.title }}</h1>
                        </a>
                        <h2>{{ product.price | money }}</h2>  
                    </div>
                {% else %}
                    <p>no items available</p>
                {% endfor %}
            </div>
        </div>

        {% render "pagination", pagination: paginate %}
    {% endpaginate %}    
</div>

<style>
    .collection-container {
        padding: 24px 16px;
    }

    .grid-container {
        display: grid;
        grid-template-columns: 1fr 3fr; /* Sidebar takes 1/4, Card container takes 3/4 */
        height: 100vh; /* Full viewport height */
        overflow-x: hidden; /* Prevent horizontal scrolling */
    }

    .sidebar-container {
        height: 100vh; /* Full viewport height */
        overflow-y: auto; /* Allow sidebar to scroll if content exceeds viewport height */
        padding: 16px;
        background-color: #f0f0f0; /* Background color for sidebar */
    }

    .card-container {
        overflow-y: auto; /* Allow card container to scroll */
        padding: 16px;
        overflow-x: hidden; /* Prevent horizontal scrolling */
    }

    .card-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        grid-auto-rows: auto;
        grid-gap: 3rem;
    }

    .card {
        padding: 10% 3%;
        width: 100%;
        border: solid 4px red;
    }
</style>
