<div class="collection-container">
    {% paginate collection.products by 4 %}
        <h1>{{ collection.title }}</h1>
        <div class="grid-container">
            <div class="sidebar-container">
                sidebar
            </div>
            <div class="card-container">
                {% for product in collection.products %}
                    <div class="card">
                        {% if product.featured_image %}
                            <img src="{{ product.featured_image.src | image_url: width: '100px' }}" alt="{{ product.featured_image.alt }}">
                        {% endif %}
                        <span>{{ product.vendor }}</span>
                        <a href="{{ product.url }}">
                            <h1>{{ product.title }}</h1>
                        </a>
                        <h2>{{ product.price | money }}</h2>  
                    </div>
                {% else %}
                    <p>no items available</p>
                {% endfor %}
            </div>
        </div>

        {% render "pagination", pagination: paginate %}
    {% endpaginate %}    
</div>

<style>
    .collection-container {
        padding: 24px 16px;
    }

    .grid-container {
        display: flex;
        height: calc(100vh - 50px); /* Adjust height to fit within viewport minus some padding/margin if needed */
    }

    .sidebar-container {
        flex: 0 0 25%; /* Fixed width for sidebar (1/4 of the container) */
        height: 100%; /* Full height within the grid cell */
        overflow-y: auto; /* Allow sidebar to scroll if content exceeds container height */
        padding: 16px;
        background-color: #f0f0f0; /* Background color for sidebar */
    }

    .card-container {
        flex: 1; /* Take the remaining space */
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        grid-auto-rows: auto;
        grid-gap: 3rem;
        padding: 16px;
        overflow: hidden; /* Prevent scroll bars */
    }

    .card {
        padding: 10% 3%;
        width: 100%;
        border: solid 4px red;
    }
</style>
