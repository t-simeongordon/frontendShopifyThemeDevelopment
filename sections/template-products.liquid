<sectiom>
    <div>
      {% render "header" %}
    </div>

    <div>
    <div>
        {% render "header-shop-categories" %}
    </div>
        <div class="collection-container">
            <div class="grid-container">
                <div class="images-container">
                    {% for image in product.images %}                    
                        <div class="image-item">
                            <a href="{{ image.src | img_url: 'large' }}">
                                <img src="{{ image.src | img_url: 'large' }}" alt="{{ image.alt | escape }}">
                            </a>
                        </div>
                    {% endfor %}
                </div>
                <div class="details-container" >
                    <div>
                        <h1>{{ product.title }} X {{ product.vendor }}</h1> 
                    </div>
                    <div>
                        <h1>type</h1>
                    </div>
                    <div>
                        <h1>{{ product.price_max |  money_with_currency }}</h1>
                    </div>
                    <div>
                      {% assign size_option_index = -1 %}
              
                      <!-- Find the index of the 'size' option -->
                      {% for option in product.options %}
                        {% if option == 'size' %}
                          {% assign size_option_index = forloop.index0 %}
                        {% endif %}
                      {% endfor %}
                      
                      <!-- Check if size option exists -->
                      {% if size_option_index != -1 %}
                        <label for="product-sizes">Product sizes:</label>
                        <select id="product-sizes" name="size">
                          {% for variant in product.variants %}
                            {% if variant.options[size_option_index] %}
                              <option value="{{ variant.options[size_option_index] }}">
                                {{ variant.options[size_option_index] }}
                              </option>
                            {% endif %}
                          {% endfor %}
                        </select>
                      {% else %}
                        <p>No sizes available for this product.</p>
                      {% endif %}
                      </div>
                </div>
                <div>
                    <form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
                        <select name="id" id="productSelect">
                            {% for variant in product.variants %}
                            {% if variant.available %}
                                <option value="{{ variant.id }}">
                                {{ variant.title }} - {{ variant.price | money_with_currency }}
                                </option>
                            {% else %}
                                <option disabled="disabled">
                                {{ variant.title }} - sold out
                                </option>
                            {% endif %}
                            {% endfor %}
                        </select>
                        {{ current_variant.price | money }}
                        <label for="Quantity">quantity</label>
                        <input type="number" id="Quantity" name="quantity" value="1" min="1">
                        <button type="submit" name="add" id="AddToCart">Add to cart</button>
                    </form>
                </div>
            </div>
            <div class="pagination-container">
            </div>
        </div>
    </div>
</section>


<style>
    @import url('https://fonts.googleapis.com/css?family=Open+Sans');

    .container {
        margin: 0 16px;
    }

    /* Collection styles */
    .collection-container {
        padding: 35px;
        position: relative;
        top: 70px;
    }

    .grid-container {
        display: grid;
        grid-template-columns: 2fr 1fr;
        min-height: 80vh;
    }

    .images-container{
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1rem;
        margin-right: 24px;
    }

    .image-item{
        display: flex;
    }

    .image-item img{
        width: 100%;
        height: 500px;
        object-fit: fill;
    }

    .details-container {
        display: flex;
        flex-direction: column;
    }


    @media (max-width: 600px) {
        .grid-container {
            grid-template-columns: 1fr;
        }
        .image-container {
            height: auto;
        }
        .card img {
            width: 100%;
            max-width: 300px;
            height: auto;
        }
        .card-container {
            grid-template-columns: 1fr;
        }
    }

</style>
