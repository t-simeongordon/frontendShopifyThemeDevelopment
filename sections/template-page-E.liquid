

<style>
    .collection-container {
        padding: 35px;
    }
    .grid-container {
        display: grid;
        grid-template-columns: 1fr 3fr;
        min-height: 80vh;
    }
    .sidebar-container {
        background-color: #f0f0f0;
        height: 100vh;
        overflow-y: auto;
    }
    .card-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
    }
    .card {
        display: flex;
        flex-direction: column;
        padding: 0 0 3% 0;
    }
    .card img {
        width: 100%;
        height: 500px;
        object-fit: cover;
    }
    .card-text {
        display: flex;
        flex-direction: column;
        gap: 0.1rem;
    }
    .card span, .card a, .card h3 {
        word-wrap: break-word;
        text-decoration: none;
        color: #000;
    }

    .
    .pagination-container {
        padding: 10px 0;
        text-align: left;
    }
    .accordion {
        margin-bottom: 10px;
    }
    .accordion-title {
        cursor: pointer;
        background-color: #f0f0f0;
        padding: 10px;
    }
    .accordion-content {
        display: none;
        padding: 10px;
    }
    .accordion.active .accordion-content {
        display: block;
    }
    @media (max-width: 600px) {
        .grid-container {
            grid-template-columns: 1fr;
        }
        .sidebar-container {
            height: auto;
        }
        .card img {
            width: 100%;
            max-width: 300px;
            height: auto;
        }
        .card-container {
            grid-template-columns: 1fr;
        }
    }
</style>

<script>
        window.onload = function() {
            const collectionHandle = getParameterByName('parameter');
            if (collectionHandle) {
                fetchCollection(collectionHandle);
            }

            const accordions = document.querySelectorAll('.accordion');
            accordions.forEach(accordion => {
                const title = accordion.querySelector('.accordion-title');
                title.addEventListener('click', function () {
                    accordion.classList.toggle('active');
                });
            });
        };

        function getParameterByName(name) {
            const url = window.location.href;
            name = name.replace(/[\[\]]/g, '\\$&');
            const regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)');
            const results = regex.exec(url);
            if (!results) return null;
            if (!results[2]) return '';
            return decodeURIComponent(results[2].replace(/\+/g, ' '));
        }

        function fetchCollection(collectionHandle) {
            fetch(`/collections/${collectionHandle}/products.json`)
                .then(response => response.json())
                .then(data => {
                    const collectionTitle = collectionHandle.replace(/-/g, ' ').toUpperCase();
                    document.getElementById('collection-title').innerText = collectionTitle;

                    const cardContainer = document.getElementById('card-container');
                    cardContainer.innerHTML = '';

                    data.products.forEach(product => {
                        const productCard = document.createElement('div');
                        productCard.className = 'card';
                        productCard.innerHTML = `
                            <img src="${product.images[0] ? product.images[0].src : ''}" alt="${product.title}">
                            <div class="card-text">
                                <h3>${product.vendor}</h3>
                                <a href="/products/${product.handle}">
                                    <span>${product.title}</span>
                                </a>
                                <span>Â£${(product.variants[0].price / 100).toFixed(2)}</span>
                            </div>
                        `;
                        cardContainer.appendChild(productCard);
                    });
                })
                .catch(err => console.error('Error fetching collection:', err));
        }
    </script>

